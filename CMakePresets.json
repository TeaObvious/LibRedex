{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "mingw32-debug",
      "displayName": "Linux -> Windows (mingw-w64 i686) Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/mingw32-debug",
      "toolchainFile": "${sourceDir}/cmake/toolchains/mingw-w64-i686.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "mingw32-release",
      "displayName": "Linux -> Windows (mingw-w64 i686) Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/mingw32-release",
      "toolchainFile": "${sourceDir}/cmake/toolchains/mingw-w64-i686.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "mingw64-debug",
      "displayName": "Linux -> Windows (mingw-w64) Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/mingw64-debug",
      "toolchainFile": "${sourceDir}/cmake/toolchains/mingw-w64-x86_64.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "mingw64-release",
      "displayName": "Linux -> Windows (mingw-w64) Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/mingw64-release",
      "toolchainFile": "${sourceDir}/cmake/toolchains/mingw-w64-x86_64.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "msys2-mingw64-debug",
      "displayName": "MSYS2 MinGW Debug",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/build/msys2-mingw64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "msys2-mingw64-release",
      "displayName": "MSYS2 MinGW Release",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/build/msys2-mingw64-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release"
    },
    {
      "name": "mingw32-debug",
      "configurePreset": "mingw32-debug"
    },
    {
      "name": "mingw32-release",
      "configurePreset": "mingw32-release"
    },
    {
      "name": "mingw64-debug",
      "configurePreset": "mingw64-debug"
    },
    {
      "name": "mingw64-release",
      "configurePreset": "mingw64-release"
    },
    {
      "name": "msys2-mingw64-debug",
      "configurePreset": "msys2-mingw64-debug"
    },
    {
      "name": "msys2-mingw64-release",
      "configurePreset": "msys2-mingw64-release"
    }
  ]
}
